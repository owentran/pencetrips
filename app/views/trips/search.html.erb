<div class="well well-small">
	<h4><%= @place.name %></h4>
	<%= @place.description %>
</div>


<div class="row-fluid">
	<ul class="thumbnails">
		<% (1..3).each{|i| %>
		<li class="span4">
			<div class="thumbnail well-small">
				<img class="image-package img-rounded" src="<%= @place.send("image_#{i}") %>">
				<div class="caption">
                    <strong>Package #<%= i %></strong>
                   	<button id="<%= i %>" class="btn btn-danger btn-block">Buy Now</button>
                    <p><%= truncate(@place.send("package_#{i}"), :length => 200) %></p>
                    <p>
   
                  </div>
			</div>
		</li>
		<% } %>
	</ul>
</div>

<form id='select_form' action="/trips/checkout" method="get">
	<input type="hidden" name="place_id" value="<%= params[:place_id] %>"/>
	<input id="package_id" type="hidden" name="package_id" value="0" />
</form>

<%= content_for :javascript do %>
<script type="text/javascript">
	$('.btn-danger').click(function() {
		$('#package_id').val(this.id);
		$('#select_form').submit();
		return false;
	});
</script>
<% end %>



