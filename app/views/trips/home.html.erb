
<h3>Travel the world.</h3>

<div class="searchbox">
	<form class="form-horizontal" action="/trips/search">
	  <div class="control-group">
	    <label class="control-label" for="inputEmail"><strong>From</strong></label>
	    <div class="controls">
	      <input type="text" id="inputEmail" placeholder="San Francisco, California">
	    </div>
	  </div>
	  <div class="control-group">
	    <label class="control-label" for="inputPassword"><strong>To</strong></label>
	    <div class="controls">
			<select name="place_id">
				<% @places.each{|place| %>
				<option value="<%= place.id %>"><%= place.name %></option>
				<% } %>
			</select>
	    </div>
	  </div>
	  <div class="control-group">
	    <div class="controls">
	    	<button type="submit" class="btn btn-large btn-success">Search</button>	  
	    </div>
	  </div>			  
	</form>		
</div>
