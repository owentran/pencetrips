
<h3>Going to <%= @place.name %> with Package #<%= params[:package_id] %></h3>

<div class="row">
  <div class="span4">
    <img class="image-package img-rounded" src="<%= @place.send("image_#{params[:package_id]}") %>"/> 
  </div>

  <div class="span8">
    <%= form_for @trip, :url => { :action => 'confirm' }, :html => { :class => "form-horizontal" } do |f| %>

      <div class="control-group">
        <%= f.label :first_name, :class => 'control-label strong' %>
        <div class="controls">
          <%= f.text_field :first_name, :class => 'text_field strong'  %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :last_name, :class => 'control-label strong' %>
        <div class="controls">
          <%= f.text_field :last_name, :class => 'text_field strong' %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit 'Book This Trip', :class => 'btn btn-large btn-success' %>
        </div>
      </div>
	  
      <input type="hidden" name="place_id" value="<%= @place.id %>"/>
      <input type="hidden" name="package_id" value="<%= params[:package_id] %>"/>

    <% end %>			
  </div>
</div>
